/* pages/search/search.wxss */
.round {
  border-radius: 5000rpx;
}

.search {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.search-form {
  background-color: #f5f5f5;
  font-size: 24rpx;
  color: #000000;
  display: flex;
  align-items: center;
  margin: 0 10rpx 0 20rpx;
}

.search-form input {
  padding-right: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
}

.search-form .iconfont {
  margin: 0 0.5em 0 0.8em;
}

.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 1;
  transform: translate(0rpx, 0rpx);
  background-color: #f44336;
  color: #ffffff;
}

.btn::after {
  border-style: none;
}