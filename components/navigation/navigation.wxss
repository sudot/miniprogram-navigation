/* components/navigation/navigation.wxss */
.navigation {
  display: block;
  position: relative;
}

.navigation .navigation-bar {
  position: fixed;
  width: 100%;
  z-index: 9999;
  box-shadow: 0rpx 0rpx 0rpx;
  min-height: 0px;

  display: flex;
  align-items: center;
  justify-content: space-between;

  /* 若是使用了背景图片,则下面的样式就会有用了 */
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

.navigation .navigation-bar .action {
  display: flex;
  align-items: center;
  height: 100%;
  max-width: 100%;
}

.navigation .navigation-bar .border {
  position: relative;
  background: rgba(0, 0, 0, 0.15);
  border-radius: 1000rpx;
  height: 30px;
}

.navigation .navigation-bar .border::before {
  content: " ";
  width: 1rpx;
  height: 110%;
  position: absolute;
  top: 22.5%;
  left: 0;
  right: 0;
  margin: auto;
  transform: scale(0.5);
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  opacity: 0.6;
  background-color: #ffffff;
}

.navigation .navigation-bar .border text {
  display: block;
  flex: 1;
  margin: auto !important;
  text-align: center;
  font-size: 34rpx;
}

.navigation .navigation-bar .content {
  position: absolute;
  text-align: center;
  width: calc(100% - 440rpx);
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  margin: auto;
  height: 60rpx;
  font-size: 32rpx;
  line-height: 60rpx;
  cursor: none;
  pointer-events: none;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.navigation .navigation-bar .right {
  font-size: 24rpx;
  margin-right: 210rpx;
}

.navigation [class*="navigation-icon-"] {
  font-family: "navigationfont" !important;
  font-style: normal;
}

@font-face {
  font-family: "navigationfont";
  src: url('data:application/x-font-woff2;charset=utf-8;base64,') format('woff2');
}

.navigation-icon-back:before {
  content: "\e679";
}

.navigation-icon-homefill:before {
  content: "\e6bb";
}